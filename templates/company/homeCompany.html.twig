{% extends 'base.html.twig'%}


{% block stylesheets%}
    <style>
        .header{
            margin: 100px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .title{ 
            font-size: 2em;
            }
        .btnContainer{
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 50px;
        }
    </style>
{% endblock %}

{% block body%}
<div class="container-xl">
    <div class="header">
        <p class="title"> Hello welcome to LinkeCoding, if you are to add a job offer click on the button</p>
        <a href='company/new'> <button class="btn btn-info">Create a company</button></a>
    </div>
    <ul class="list-group">
        
        {% for company in companies%}
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto" >
                <div class="fw-bold"> {{company.companyName}} </div>
                {{company.companyDescription}}
            </div>
        </li>
        {% endfor%}
    <ul>
        <div class="btnContainer">
            <a href='/'> <button class="btn btn-success">Back Home</button></a>
        </div>
    </div>
{% endblock %}

